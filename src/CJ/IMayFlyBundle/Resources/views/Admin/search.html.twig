{% extends "CJIMayFlyBundle::admin-layout.html.twig" %}

{% block title %}
    Admin - {{ parent() }}
{% endblock %}

{% block cjimayfly_body %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Post</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        RÃ©sultats Posts
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>user</th>
                                    <th>title</th>
                                    <th>image</th>
                                    <th>View</th>
                                    <th>like</th>
                                    <th>category</th>
                                    <th>tags</th>
                                    <th>description</th>
                                    <th class="text-center">Options</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for post in posts %}
                                    <tr>
                                        <td><a href="{{ path ('CJ_IMayFly_view',{'id': post.id }) }}">{{ post.id }}</a></td>
                                        <td><a href="{{ path ('CJ_IMayFly_user',{'id': post.user.id }) }}">{{ post.user }}</a></td>
                                        <td>{{ post.title }}</td>
                                        <td>{{ post.image }}</td>
                                        <td>{{ post.view }}</td>
                                        <td>{{ post.vote }}</td>
                                        <td>{{ post.category }}</td>
                                        <td>{{ post.tags }}</td>
                                        <td>{{ post.description|slice(0, 50) }}...</td>
                                        <td class="text-center">
                                            <a href="{{ path ('CJ_IMayFly_adminpostdelete',{'id': post.id }) }}" title="Supprimer un utilisateur" class="btn btn-sm btn-danger"><i class="fa fa-trash-o fa-fw"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center">{{ knp_pagination_render(posts) }}</div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
        </div>
    </div>
{% endblock %}