{% extends "CJIMayFlyBundle::layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block cjimayfly_body %}
<!--========================================================
                           CONTENT
 =========================================================-->

<main>

    <section class="well well1 well1_ins1">
        <div class="container center991">
            <h2 class="text-center">ACCUEIL</h2>
            <div class="row">
                {% for post in posts %}
                    <div class="col-md-4 col-sm-12 col-xs-12">
                        <div class="thumbnail thumb-shadow">
                            <a href="{{ path ('CJ_IMayFly_view',{'id': post.id}) }}">
                                <img src="images/game1.jpg" alt="" width="100%">
                                <div class="caption bg2">
                                    <h6>
                                        {{ post.title }}
                                    </h6>
                                </div>
                            </a>
                        </div>
                    </div>

                {% else %}
                    <li>Pas (encore !) de post</li>
                {% endfor %}
            </div>
        </div>
    </section>
</main>
{% endblock %}