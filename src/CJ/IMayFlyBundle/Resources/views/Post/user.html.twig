{% extends "CJIMayFlyBundle::layout.html.twig" %}

{% block title %}
    User - {{ parent() }}
{% endblock %}

{% block cjimayfly_body %}
<!--========================================================
                           CONTENT
    =========================================================-->

<main>
    <section class="well well4">
        <div class="container">
            <h2 class="text-center">{{ user.username }}</h2>
            <div class="row">
                <div class="col-md-9 col-sm-12">
                    <h4 class="text-center">IMAGES UPLOADÃ‰</h4>
                    <div class="row">
                        {% for post in posts %}
                        <div class="col-md-4 col-sm-12 col-xs-12">
                            <div class="thumbnail thumb-shadow">
                                <a href="{{ path('CJ_IMayFly_view',{'id': post.id }) }}">
                                    <img src="{{ asset('uploads/images/' ~ post.image) }}" alt="" width="100%">
                                    <div class="caption bg2">
                                        <h6 class="text-center">
                                            {{ post.title }}
                                        </h6>
                                    </div>
                                </a>
                            </div>
                        </div>
                        {% else %}
                            <li>Pas (encore !) de post</li>
                        {% endfor %}
                    </div>
                    <div class="text-center">{{ knp_pagination_render(posts) }}</div>
                </div>
                <div class="text-center col-md-3 col-sm-12">
                    <h4 class="text-center">STATISTIQUE</h4>
                    <p>{{ user.view }} <span class="glyphicon glyphicon-eye-open"></span></p></br>
                    <p>{{ user.vote }} <span class="glyphicon glyphicon-heart"></span></p>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}