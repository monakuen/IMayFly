{% extends "CJIMayFlyBundle::layout.html.twig" %}

{% block title %}
    Post - {{ parent() }}
{% endblock %}

{% block cjimayfly_body %}

    <!--========================================================
                           CONTENT
    =========================================================-->

    <main xmlns="http://www.w3.org/1999/html">
        <section class="well well1 well1_ins1">
            <div class="container center991">
                <h3 class="text-center">{{ post.title }}</h3>
                <img src="{{ asset('uploads/images/' ~ post.image) }}" width="100%">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        <a href="{{ path('CJ_IMayFly_user', {'id': post.user.id }) }}">
                            <h4 class="text-center">{{ post.user }}</h4>
                        </a>
                        <div class="text-center">
                            <a href="#">
                                <span class="glyphicon glyphicon-heart"></span>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <p>{{ post.description }}</p>
                    </div>
                </div>
                {% if is_granted('ROLE_SUPER_ADMIN') or app.user == post.user %}
                    <div class="text-center">
                        <a href="{{ path('CJ_IMayFly_edit', {'id': post.id}) }}">
                            <i class="glyphicon glyphicon-edit"></i>
                            <p>Modifier le post</p>
                        </a>
                        <a href="{{ path('CJ_IMayFly_delete', {'id': post.id}) }}">
                            <i class="glyphicon glyphicon-trash"></i>
                            <p>Supprimer le post</p>
                        </a>
                    </div>
                {% endif %}
            </div>
        </section>
    </main>

{% endblock %}